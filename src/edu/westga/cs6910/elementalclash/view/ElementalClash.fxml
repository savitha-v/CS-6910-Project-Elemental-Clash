<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?xml-model href="ElementalClash.fxml"?>

<AnchorPane fx:id="pane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="550.0" prefWidth="1550.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.westga.cs6910.elementalclash.view.ElementalClashCodeBehind">
    <children>
        <VBox layoutX="10.0" layoutY="10.0" spacing="20.0">
            <HBox spacing="20.0">
                <VBox spacing="10.0">
                    <Label text="Human's Front of Cards" />
                    <HBox fx:id="humanTableFront" alignment="CENTER_LEFT" prefHeight="200.0" prefWidth="750.0" spacing="10.0" style="-fx-background-color: #c0c0c0;">
                        <effect>
                            <Glow />
                        </effect>
                        <padding>
                            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                        </padding>
                    </HBox>
                </VBox>
                <VBox spacing="10.0">
                    <Label text="Computer's Front of Cards" />
                    <HBox fx:id="computerTableFront" alignment="CENTER_LEFT" prefHeight="200.0" prefWidth="750.0" spacing="10.0" style="-fx-background-color: #c0c0c0;">
                        <effect>
                            <Glow />
                        </effect>
                        <padding>
                            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                        </padding>
                    </HBox>
                </VBox>
            </HBox>
            <HBox spacing="20.0">
                <VBox spacing="10.0">
                    <Label text="Human's Back of Cards" />
                    <HBox fx:id="humanTableBack" alignment="CENTER_LEFT" prefHeight="200.0" prefWidth="750.0" spacing="10.0" style="-fx-background-color: #c0c0c0;">
                        <effect>
                            <Glow />
                        </effect>
                        <padding>
                            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                        </padding>
                    </HBox>
                </VBox>
                <VBox spacing="10.0">
                    <Label text="Computer's Back of Cards" />
                    <HBox fx:id="computerTableBack" alignment="CENTER_LEFT" prefHeight="200.0" prefWidth="750.0" spacing="10.0" style="-fx-background-color: #c0c0c0;">
                        <effect>
                            <Glow />
                        </effect>
                        <padding>
                            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                        </padding>
                    </HBox>
                </VBox>
            </HBox>
            <Label fx:id="roundResultLabel" text="Round Result" />
            <HBox spacing="20.0">
                <Label text="Human Wins: " />
                <Label fx:id="humanWinsLabel" text="0" />
                <Label text="Computer Wins: " />
                <Label fx:id="computerWinsLabel" text="0" />
            </HBox>
            <HBox spacing="20.0">
                <Button text="Play Round" onAction="#handlePlayRound" />
                <Button text="Restart Round" onAction="#handleRestartRound" />
                <Button text="Save Game" onAction="#handleSaveGame" />
                <Button text="Load Game" onAction="#handleLoadGame" />
            </HBox>
        </VBox>
    </children>
</AnchorPane>